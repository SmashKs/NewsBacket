<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.main.KeywordFragment">

    <include layout="@layout/merge_action_bar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_keywords"
        style="@style/Constraint.Any.MatchHorParent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_header"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        style="@style/FAB.keyword.add"/>

</androidx.constraintlayout.widget.ConstraintLayout>
