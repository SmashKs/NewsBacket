<?xml version="1.0" encoding="utf-8"?>
<com.github.florent37.shapeofview.shapes.CutCornerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:shape_cutCorner_bottomRightSize="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDarkV1"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/md_one_unit"
            tools:text="@tools:sample/lorem"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/md_one_unit"
            android:layout_marginEnd="@dimen/md_one_unit"
            android:layout_marginStart="@dimen/md_one_unit"
            tools:text="@tools:sample/cities"/>
    </LinearLayout>
</com.github.florent37.shapeofview.shapes.CutCornerView>
