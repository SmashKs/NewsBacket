<?xml version="1.0" encoding="utf-8"?>
<navigation
    android:id="@+id/nav_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/frag_index">

    <fragment
        android:id="@+id/frag_index"
        android:name="com.no1.taiwan.newsbasket.features.main.IndexFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_index">
        <action
            android:id="@+id/action_nav_index_to_keyword"
            app:destination="@id/frag_keyword"
            app:enterAnim="@anim/fragment_slide_right_in"
            app:exitAnim="@anim/fragment_slide_left_out"
            app:popEnterAnim="@anim/fragment_slide_left_in"
            app:popExitAnim="@anim/fragment_slide_right_out"/>

        <action
            android:id="@+id/action_nav_index_to_archive"
            app:destination="@id/frag_archive"
            app:enterAnim="@anim/fragment_slide_right_in"
            app:exitAnim="@anim/fragment_slide_left_out"
            app:popEnterAnim="@anim/fragment_slide_left_in"
            app:popExitAnim="@anim/fragment_slide_right_out"/>
        <action
            android:id="@+id/action_frag_index_to_frag_news_detail"
            app:destination="@id/frag_news_detail"
            app:enterAnim="@anim/fragment_slide_right_in"
            app:exitAnim="@anim/fragment_slide_right_out"
            app:popEnterAnim="@anim/fragment_slide_left_in"
            app:popExitAnim="@anim/fragment_slide_right_out"/>
    </fragment>

    <fragment
        android:id="@+id/frag_keyword"
        android:name="com.no1.taiwan.newsbasket.features.main.KeywordFragment"
        android:label="@string/title_keyword"
        tools:layout="@layout/fragment_keyword">
        <action
            android:id="@+id/action_nav_keyword_to_index"
            app:destination="@+id/frag_index"
            app:enterAnim="@anim/fragment_slide_right_in"
            app:exitAnim="@anim/fragment_slide_right_out"
            app:popEnterAnim="@anim/fragment_slide_left_in"
            app:popExitAnim="@anim/fragment_slide_right_out"/>
    </fragment>

    <fragment
        android:id="@+id/frag_archive"
        android:name="com.no1.taiwan.newsbasket.features.main.ArchiveFragment"
        android:label="@string/title_archive"
        tools:layout="@layout/fragment_archive">
        <action
            android:id="@+id/action_nav_archive_to_index"
            app:destination="@+id/frag_index"
            app:enterAnim="@anim/fragment_slide_right_in"
            app:exitAnim="@anim/fragment_slide_right_out"
            app:popEnterAnim="@anim/fragment_slide_left_in"
            app:popExitAnim="@anim/fragment_slide_right_out"/>
    </fragment>

    <fragment
        android:id="@+id/frag_news_detail"
        android:name="com.no1.taiwan.newsbasket.features.main.NewsDetailFragment"
        android:label="@string/title_detail"
        tools:layout="@layout/fragment_news_detail">
    </fragment>
</navigation>
